{
    "tasks": [
        {
            "type": "cppbuild",
            // launch 中的调试任务与此一一对应
            "label": "GCC 生成活动文件",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-Wformat-overflow=0",
                "-g",
                "/home/zhangjin/projects/CSAPP/sourcecode/src/csapp.c",
                "/home/zhangjin/projects/CSAPP/sourcecode/netp/tiny/tiny.c",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}